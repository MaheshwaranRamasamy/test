<div class="row show-grid"> 
	<div class="col-lg-8">
		{{#if model}}
			
				<table class="table table-bordered"> 
					<thead> 
						<tr> 
							<th>#</th> 
							<th>Last Name</th> 
							<th>First Name</th> 
							<th>Email</th> 
						</tr> 
					</thead> 
					<tbody> 
						{{#each model as |item|}}
						<tr> 
							<th scope="row">1</th> 
							<td>{{item.lname}}</td> 
							<td>{{item.fname}}</td> 
							<td>{{item.email}}</td> 
						</tr>  
						{{/each}}
					</tbody> 
				</table>
			
		{{else}}	
			<div class="alert alert-info" role="alert">No Contacts Available.</div>
		{{/if}}	
	</div> 
	<div class="col-lg-4">
		{{outlet}}
	</div> 
</div>
